@{
    ViewData["Title"] = "Error";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
    <link rel="stylesheet" href="~/css/success-error.css" />
}

<div class="error-container">
    <!-- Error Particles Animation -->
    <div class="error-particles"></div>
    <div class="error-particles"></div>
    <div class="error-particles"></div>
    <div class="error-particles"></div>
    <div class="error-particles"></div>
    <div class="error-particles"></div>
    <div class="error-particles"></div>
    <div class="error-particles"></div>
    <div class="error-particles"></div>
    
    <div class="error-card">
        <div class="error-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        
        <h1 class="error-title">Authentication Error</h1>
        <p class="error-subtitle">Something went wrong during authentication</p>
        
        <!-- Error Message from TempData -->
        @if (TempData["Error"] != null)
        {
            <div class="error-message">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["Error"]
            </div>
        }
        else
        {
            <div class="error-details">
                <p><i class="bi bi-info-circle me-2"></i>An unexpected error occurred during authentication.</p>
                <p class="mb-0 text-muted small">Please try again or contact support if the problem persists.</p>
            </div>
        }
        
        <div class="action-buttons">
            <a class="btn-primary-custom" asp-controller="Account" asp-action="Login">
                <i class="bi bi-arrow-left"></i>
                Back to Login
            </a>
            <a class="btn-outline-custom" asp-controller="Account" asp-action="Register">
                <i class="bi bi-person-plus"></i>
                Create Account
            </a>
        </div>
    </div>
</div>