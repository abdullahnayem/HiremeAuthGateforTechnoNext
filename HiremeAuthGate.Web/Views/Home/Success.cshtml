@{
    ViewData["Title"] = "Success";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
    <link rel="stylesheet" href="~/css/success-error.css" />
}

<div class="success-container">
    <!-- Confetti Animation -->
    <div class="confetti"></div>
    <div class="confetti"></div>
    <div class="confetti"></div>
    <div class="confetti"></div>
    <div class="confetti"></div>
    <div class="confetti"></div>
    <div class="confetti"></div>
    <div class="confetti"></div>
    <div class="confetti"></div>
    
    <div class="success-card">
        <div class="success-icon">
            <i class="bi bi-check-circle-fill"></i>
        </div>
        
        <h1 class="success-title">Authentication Successful!</h1>
        <p class="success-subtitle">Welcome to your secure dashboard</p>
        
        <div class="user-info">
            <p class="mb-2 text-muted">Logged in as:</p>
            <p class="user-email">@User.Identity?.Name</p>
        </div>
        
        <!-- Success Message from TempData -->
        @if (TempData["Success"] != null)
        {
            <div class="success-message">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["Success"]
            </div>
        }
        
        <div class="action-buttons">
            <a class="btn-success-custom" href="/">
                <i class="bi bi-house"></i>
                Go to Dashboard
            </a>
            <a class="btn-outline-custom" asp-controller="Account" asp-action="Logout">
                <i class="bi bi-box-arrow-right"></i>
                Logout
            </a>
        </div>
    </div>
</div>