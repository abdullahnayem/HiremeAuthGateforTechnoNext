@model HiremeAuthGate.BusinessModel.DTOs.LoginRequest
@{
    ViewData["Title"] = "Login";
}
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h3 class="mb-3">Login</h3>
                <form asp-action="Login" method="post" id="loginForm">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <input asp-for="Password" class="form-control" type="password" placeholder="******" id="loginPasswordInput" />
                            <button class="btn btn-outline-secondary" type="button" id="loginPasswordToggle">
                                <i class="bi bi-eye" id="loginPasswordIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary w-100" type="submit">Sign in</button>
                    <div class="text-center mt-3">
                        <a asp-action="Register" class="text-decoration-none">Don't have an account? Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/form-validation.js"></script>
}